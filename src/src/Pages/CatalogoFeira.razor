        </div>
        <div class="produto-square">
            @if (shownProdutos[1] != null)
            {
                <button><a href="catalogo/@nomeFeira/@shownProdutos[1]"><img src="css/images/batata-vermelha-final-1.jpg" width="100%" height="100%" /></a></button>
                <h1>@shownProdutos[1]</h1>
            }
        </div>
        <div class="produto-square">
            @if (shownProdutos[2] != null)
            {
                <button><a href="catalogo/@nomeFeira/@shownProdutos[2]"><img src="css/images/batata-vermelha-final-1.jpg" width="100%" height="100%" /></a></button>
                <h1>@shownProdutos[2]</h1>
            }
        </div>
        <div class="produto-square">
            @if (shownProdutos[3] != null)
            {
                <button><a href="catalogo/@nomeFeira/@shownProdutos[3]"><img src="css/images/batata-vermelha-final-1.jpg" width="100%" height="100%" /></a></button>
                <h1>@shownProdutos[3]</h1>
            }
        </div>
        <div class="produto-square">
            @if (shownProdutos[4] != null)
            {
                <button><a href="catalogo/@nomeFeira/@shownProdutos[4]"><img src="css/images/batata-vermelha-final-1.jpg" width="100%" height="100%" /></a></button>
                <h1>@shownProdutos[4]</h1>
            }

        </div>
        <div class="produto-square">
            @if (shownProdutos[5] != null)
            {
                <button><a href="catalogo/@nomeFeira/@shownProdutos[5]"><img src="css/images/batata-vermelha-final-1.jpg" width="100%" height="100%" /></a></button>
                <h1>@shownProdutos[5]</h1>
