@page "/catalogo/{nomeFeira}"
@using src.Data.BusinessLogic.SubFeiras
@inject SubFeirasFacade Facade

<style>

    body, html {
        height: 100%;
        width: 100%;
    }

    .title-bar {
        margin-bottom: 0px;
        margin-top: 10px;
        font-size: 2em;
    }

        .title-bar input {
            border: solid;
            border-color: var(--color-blue);
            border-width: 2px;
            padding: 5px;
        }

        .title-bar button {
            border: none;
            background-color: white;
        }

            .title-bar button:hover {
                cursor: pointer;
            }

    .produtos {
        height: 100%;
        display: grid;
        grid-template-columns: auto auto auto;
    }

    .produto-square {
        justify-self: center;
        align-self: center;
        width: 150px;
        height: 150px;
        margin-top: -30px;
    }

        .produto-square:before {
            content: "";
            float: left;
            padding-top: 10%; /* initial ratio of 1:1*/
        }

        .produto-square button {
            height: 100%;
            width: 100%;
            border: solid;
            border-width: 5px;
        }

        .produto-square button:hover {
            border-color: dimgrey;
        }

        .produto-square h1 {
            margin-top: 2px;
            font-size: 20px;
        }

    .produtos-container {
        height: 63%;
        grid-template-columns: 15% auto 15%;
        grid-template-rows: auto;
        display: @produtosStyle;
    }

    .icon {
        justify-self: center;
        align-self: center;
    }

    .fa-arrow-left {
        font-size: 50px;
        color: var(--color-blue);
    }

    .fa-arrow-right {
        font-size: 50px;
        color: var(--color-blue);
    }

    .filtered-produto-container {
        display: @filteredStyle;
        grid-template-columns: auto;
        margin-top: 5%;
    }

    .filtered-produto {
        justify-self: center;
        align-self: center;
        width: 300px;
        height: 300px;
    }

        .filtered-produto button {
            border: solid;
            height: 100%;
            width: 100%;
            border-width: 5px;
        }

        .filtered-produto button:hover {
            border-color: dimgrey;
        }

</style>

