<style>
    body, html {
        height: 100%;
        width: 100%;
        background-color: white;
    }

    .top-content{
        height: 40%;
       /* padding: 50px;*/
        display: grid;
        grid-template-columns: 20% auto;
        background-color: lightskyblue;
    }

    .img-container {
        height: 300px;
        width: 300px;
        border: dashed;
        justify-self: center;
        align-self: center;
    }

    .right-content{
        border: solid;
        width: 80%;
        height: 300px;
        justify-self: center;
        align-self: center;
    }

    .top-row{
        margin-top: 30px;
        display: grid;
        grid-template-columns: 30% 40% 30%;
    }

    .desc {
        margin: 50px;
    }

    .desc p {
        text-align: justify;
        margin-top: 20px;
    }

    .button-primary{
        background-color: yellow;
        color: yellow;
    }

    .checked {
        color: orange;
    }

    .not-checked{
        color: white;
    }

</style>

